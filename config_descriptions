#
# Companion information for variables 
#
# Uses an associative array to reference the descriptive terms. 
#
declare -A cfgDesc
# variable					# substitution string in template

cfgDesc[krb5_libdef_default_realm]="KERBEROS:/etc/krb5.conf: Unix Kerberos or Active Directory default realm" 		# kRb5_LiBdEf_DeFaUlT_ReAlM  DOMAIN.LOCAL
cfgDesc[krb5_realms_def_dom]="KERBEROS:/etc/krb5.conf: Unix Kerberos5 KDC ori Active Directory WINS DNS Controller host" #kRb5_rEaLmS_dEf_DoM	domain.local
cfgDesc[krb5_domain_realm]="KERBEROS:/etc/krb5.conf: Unix Kerberos5 DNS domain realm"				#kRb5_DoMaIn_ReAlM	domain.ca
cfgDesc[smb_workgroup]="SAMBA:/etc/samba/smb.conf: WorkGroup shortname for domain" #sMb_WoRkGrOuP		DOMAIN
cfgDesc[smb_netbios_name]="SAMBA:/etc/samba/smb.conf: This hosts name in Active Directory must pre-exist"			#sMb_NeTbIoS_NaMe	APP1
cfgDesc[smb_passwd_svr]="SAMBA:/etc/samba/smb.conf: IP of Primary DC server"			#sMb_PaSsWd_SvR		IP of AD domain controller
cfgDesc[smb_realm]="SAMBA:/etc/samba/smb.conf: default realm equal to Kerberos Default realm"	#sMb_ReAlM		realm
#
#
# RADIUS config variables & relevant file
#
# raddb/radius.conf   	- overall config 
cfgDesc[freeRADIUS_realm]="FREERADIUS:radius.conf: This is your organizations eduroam domain name" #fReErAdIuS_rEaLm

# raddb/client.conf   	- clients that can talk to this radius server

cfgDesc[freeRADIUS_cdn_prod_passphrase]="FREERADIUS:clients.conf: The eduroam shared secret provided to you" # PrOd_EduRoAm_PhRaSe #used in clients.conf, proxy.conf
cfgDesc[freeRADIUS_clcfg_ap1_ip]="FREERADIUS:clients.conf: IP address where RADIUS requests originate from on your LAN"			# CLCFG_YaP1_iP 	1.2.3.4
cfgDesc[freeRADIUS_clcfg_ap1_secret]="FREERADIUS:clients.conf: The shared secret in your access point on your LAN"			# CLCFG_YaP1_sEcReT
cfgDesc[freeRADIUS_clcfg_ap2_ip]="FREERADIUS:clients.conf: A second IP address where RADIUS requests originate from on your LAN"			# CLCFG_YaP2_iP 	4.3.2.1 null route in your ip space if not needed
cfgDesc[freeRADIUS_clcfg_ap2_secret]="FREERADIUS:clients.conf: The shared secret used in your second AP on your LAN"			# CLCFG_YaP2_sEcReT

# raddb/proxy.conf 	- Federation Level Radius (FLR) radius servers we talk to

cfgDesc[freeRADIUS_pxycfg_realm]="FREERADIUS:proxy.conf: This is your organizations eduroam domain name"  # PXYCFG_rEaLm   #the proxying domain

# raddb/certs/ca.cnf	- Self Signed Certificate Authority settings for bootstrap process
# note that the templates have 10 year validity for the CA and the server certificate

cfgDesc[freeRADIUS_ca_State]="FREERADIUS:certs/ca.cnf: Your Province "				# CRT_Ca_StAtE  # Ontario 
cfgDesc[freeRADIUS_ca_local]="FREERADIUS:certs/ca.cnf: Your City"				# CRT_Ca_LoCaL  # Ottawa
cfgDesc[freeRADIUS_ca_org_name]="FREERADIUS:certs/ca.cnf: Your Legal Name"			# CRT_Ca_OrGnAmE # Domain Inc.
cfgDesc[freeRADIUS_ca_email]="FREERADIUS:certs/ca.cnf: Your tech contact email - usually a role based one"				# CRT_Ca_EmAiL   # itsupport@domain.ca
cfgDesc[freeRADIUS_ca_commonName]="FREERADIUS:certs/ca.cnf: You CA string e.g. SelfSigned domain.ca Authority"			# CRT_Ca_CoMmOnNaMe # "SelfSigned domain.ca CA Authority"

#raddb/certs/server.cnf	- Server Certificate settings for bootstrap process

cfgDesc[freeRADIUS_svr_State]="FREERADIUS:certs/server.cnf: Your Province"				# CRT_SvR_StAtE  # Ontario 
cfgDesc[freeRADIUS_svr_local]="FREERADIUS:certs/server.cnf: Your City"				# CRT_SvR_LoCaL  # Ottawa
cfgDesc[freeRADIUS_svr_org_name]="FREERADIUS:certs/server.cnf: Your Legal Name"			# CRT_SvR_OrGnAmE # Domain Inc.
cfgDesc[freeRADIUS_svr_email]="FREERADIUS:certs/server.cnf: Your tech contact email -usually a role based one"				# CRT_SvR_EmAiL   # itsupport@domain.ca
cfgDesc[freeRADIUS_svr_commonName]="FREERADIUS:certs/server.cnf: **IMPORTANT:this is the public DNS hostname of the server"			# CRT_SvR_CoMmOnNaMe # testidp.domain.ca
